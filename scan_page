    <div class="w-full max-w-md flex justify-between items-start mb-4">
        <button onclick="toggleModal('instructionsModal', true)" class="w-14 h-14 bg-white border-2 border-black rounded-xl shadow-[4px_4px_0px_black] flex items-center justify-center bubbly-button">
            <i data-lucide="file-text" class="w-8 h-8 text-slate-400"></i>
        </button>
        <div class="bg-white border-2 border-black px-3 py-1 rounded-lg text-[10px] font-bold shadow-[2px_2px_0px_black]">
            assembler02@fih.com
        </div>
    </div>

    <div id="hero-area" class="w-full max-w-md relative mb-4">
        <div id="viewfinder" class="relative w-full aspect-square border-[8px] border-black rounded-[3rem] overflow-hidden bg-zinc-900 shadow-2xl flex items-center justify-center p-8">
            <img id="viewfinder-img" src="idle-1.png" class="max-w-full max-h-full object-contain transition-opacity duration-300">
            <div id="laser-bar" class="laser hidden"></div>
            
            <div class="absolute inset-0 border-[20px] border-zinc-900 pointer-events-none"></div>
