        Oops I mis-scanned. Let me start over.
    </button>

    <div id="instructionsModal" class="hidden fixed inset-0 z-[200] flex items-center justify-center p-4 bg-black/80 backdrop-blur-sm">
        <div class="bg-white w-full max-w-lg rounded-[3rem] border-4 border-black shadow-[10px_10px_0px_black] overflow-hidden flex flex-col">
            <div class="p-6 border-b-4 border-black flex justify-between items-center bg-[#F3D37D]">
                <h3 class="font-black text-2xl uppercase italic">Instructions</h3>
                <button onclick="toggleModal('instructionsModal', false)" class="p-2 bg-white border-2 border-black rounded-full shadow-[2px_2px_0px_black]"><i data-lucide="x" class="w-8 h-8"></i></button>
            </div>
            <div class="p-4"><img src="assembly-guide.png" class="w-full h-auto rounded-xl"></div>
            <div class="p-6"><button onclick="toggleModal('instructionsModal', false)" class="w-full bg-black text-white font-black py-4 rounded-xl uppercase">Close</button></div>
        </div>
    </div>

    <script>
        lucide.createIcons();
        
        const scanData = {
            elabel: { code: "YZ08-3Z5F", img: "scan-elabel.png" },
            rail: { code: "4Z1-9S8TW", img: "scan-rail.png" },
            camera: { code: "tc31d_00000716", img: "scan-camera.png" }
        };

        const sequence = [
            { type: 'idle', img: 'idle-1.png' },
            { type: 'scan', target: 'elabel', img: 'scan-elabel.png' },
            { type: 'idle', img: 'idle-2.png' },
            { type: 'scan', target: 'rail', img: 'scan-rail.png' },
            { type: 'idle', img: 'idle-3.png' },
            { type: 'scan', target: 'camera', img: 'scan-camera.png' },
            { type: 'finish' }
        ];

        let currentStep = 0;

        function runDemo() {
            if (currentStep >= sequence.length) return;
            
            const step = sequence[currentStep];
            const img = document.getElementById('viewfinder-img');
            const laser = document.getElementById('laser-bar');

            if (step.type === 'finish') {
                triggerFinalDopamine();
                return;
            }

            img.src = step.img;
            
            // Randomize timing: 1500ms to 3500ms
            const randomTime = Math.floor(Math.random() * (3500 - 1500 + 1)) + 1500;

            if (step.type === 'scan') {
                laser.classList.remove('hidden');
                setTimeout(() => {
                    laser.classList.add('hidden');
                    completeBubble(step.target);
                    currentStep++;
                    runDemo();
                }, randomTime);
            } else {
                laser.classList.add('hidden');
                setTimeout(() => {
                    currentStep++;
                    runDemo();
                }, randomTime);
            }
        }

        function completeBubble(target) {
            const bubble = document.getElementById(`bubble-${target}`);
            const content = document.getElementById(`content-${target}`);
            const spark = document.createElement('div');
            spark.className = 'spark';
            bubble.appendChild(spark);
            setTimeout(() => spark.remove(), 600);

            bubble.classList.add('complete');
            content.innerHTML = `
                <div class="bg-white border-2 border-black rounded-xl p-2 text-center shadow-[2px_2px_0px_black]">
                    <span class="font-mono font-black text-xl tracking-tighter">${scanData[target].code}</span>
                </div>
            `;
        }

        function triggerFinalDopamine() {
            const hero = document.getElementById('hero-area');
            document.getElementById('main-instruction').innerText = "Scanning Complete!";
            hero.innerHTML = `
                <a href="plug_in_battery.html" class="block w-full aspect-square border-[8px] border-[#84cc16] rounded-[3rem] bg-white shadow-[0_20px_50px_rgba(132,204,22,0.3)] flex flex-col items-center justify-center p-8 bubbly-button">
                    <div class="text-[#84cc16] animate-bounce mb-4"><i data-lucide="check-circle-2" class="w-32 h-32"></i></div>
                    <h2 class="font-black text-4xl uppercase italic text-black leading-none text-center">Complete</h2>
                    <div class="mt-6 flex items-center gap-2 bg-black text-[#F3D37D] px-10 py-4 rounded-2xl font-black text-2xl shadow-[4px_4px_0px_#84cc16]">NEXT <i data-lucide="chevron-right"></i></div>
                </a>
            `;
            lucide.createIcons();
        }

        function toggleModal(id, show) { document.getElementById(id).classList.toggle('hidden', !show); }
        window.onload = runDemo;
    </script>
</body>
</html>
