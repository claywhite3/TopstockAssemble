    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        .bubbly-button { transition: all 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275); }
        .bubbly-button:active { transform: scale(0.95); }
        
        .laser {
            height: 6px; background: #ff0000; box-shadow: 0 0 20px 8px rgba(255, 0, 0, 0.6);
            position: absolute; width: 100%; z-index: 20; animation: scanLine 2s infinite linear;
        }

        @keyframes scanLine {
            0% { top: 0%; opacity: 0; }
            50% { opacity: 1; }
            100% { top: 100%; opacity: 0; }
        }

        .scan-bubble {
            transition: all 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
            background-color: #7d96a8;
            border: 4px solid #1a1a1a;
        }
        .scan-bubble.complete {
            background-color: #93c47d;
            border-color: #1a1a1a;
        }

        .spark {
            position: absolute; width: 100px; height: 100px;
            border: 4px dotted #F3D37D; border-radius: 50%;
            animation: sparks 0.6s ease-out forwards;
        }

        @keyframes sparks {
            0% { transform: scale(0); opacity: 1; }
            100% { transform: scale(2.5); opacity: 0; }
        }
